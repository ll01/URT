{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "conan install .; scons debug=1; rm -r *.pdb",
            "windows": {
                "problemMatcher": [
                    "$msCompile"
                ]
            },
            "group": "build"
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "conan install .; scons",
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "scons -c",
            "group": "none"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "scons",
            "args": [
                "debug=1",
                "target=${file}",
                "symbols=${fileDirname}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}